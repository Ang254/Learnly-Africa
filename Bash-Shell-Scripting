#!/bin/bash

#Simple script that batch creates 25 new files with the format <Cloud><number> and the number increases + 1 for each file created. Every time the script runs it creates the next batch of 25 files with increasing numbers starting with the maximum number that already exists.

name=Cloud
count=25

# find the highest existing number
max=$(ls ${name}[0-9]* 2>/dev/null | sed "s/[^0-9]//g" | sort -n | tail -1)
max=${max:-0}

for ((i=1; i<=count; i++)); do
  number=$((10#$max + i))
  touch "${name}${number}"
done

echo "Created files ${name}$((10#$max + 1)) to ${name}$((10#$max + count))"
ls -l ${name}* | sort -V
